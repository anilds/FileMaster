<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.filemaster"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.filemaster.MainActivity"
             
            android:label="@string/app_name" >
         
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
			android:name=".FirstActivity"
			android:label="@string/app_name" 
			android:onClick="popup">
			<intent-filter>
			<action android:name="com.example.filemaster.FirstActivity" />
			<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
        <activity
			android:name=".SecondActivity"
			android:label="@string/app_name" 
			android:onClick="popup">
			<intent-filter>
			<action android:name="com.example.filemaster.SecondActivity" />
			<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		
        <activity
			android:name=".ThirdActivity"
			android:label="@string/app_name" 
			android:onClick="popup">
			<intent-filter>
			<action android:name="com.example.filemaster.ThirdActivity" />
			<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		
         <activity
			android:name=".FourActivity"
			android:label="@string/app_name" 
			android:onClick="popup">
			<intent-filter>
			<action android:name="com.example.filemaster.FourActivity" />
			<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
         <activity
            android:name=".FileChooser"
           android:label="@string/app_name" 
			android:onClick="popup"
             android:screenOrientation="portrait"> 
                <action android:name="com.example.filemaster.FileChooser" />

                <category android:name="android.intent.category.DEFAULT" /> 
        </activity>
        <activity
            android:name=".TextViewReadActivity"
           android:label="@string/app_name" 
			android:onClick="popup"
             android:screenOrientation="portrait"> 
                <action android:name="com.example.filemaster.TextViewReadActivity" />

                <category android:name="android.intent.category.DEFAULT" /> 
        </activity>
        
         <activity
            android:name=".EditReadWrite"
           android:label="@string/app_name" 
			android:onClick="popup"
             android:screenOrientation="portrait"> 
                <action android:name="com.example.filemaster.EditReadWrite" />

                <category android:name="android.intent.category.DEFAULT" /> 
        </activity>
         
          <activity
            android:name=".FileChooserInternalStorage"
           android:label="@string/app_name" 
			android:onClick="popup"
             android:screenOrientation="portrait"> 
                <action android:name="com.example.filemaster.FileChooserInternalStorage" />

                <category android:name="android.intent.category.DEFAULT" /> 
        </activity>
         
         <activity android:name=".ui.CategoryActivity"
        android:label="@string/app_name"></activity> 
        
          <activity
			android:name=".CutomDialog"
			android:label="@string/app_name" 
			android:onClick="popup">
			<intent-filter>
			<action android:name="com.example.filemaster.CutomDialog" />
			<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
        
            
    </application>

</manifest>